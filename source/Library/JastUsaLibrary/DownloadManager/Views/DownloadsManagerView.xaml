<UserControl x:Class="JastUsaLibrary.DownloadManager.Views.DownloadsManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JastUsaLibrary.Views"
             xmlns:jastconv="clr-namespace:JastUsaLibrary.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <UserControl.Resources>
        <jastconv:FileNameToExtensionGlyphCodeConverter x:Key="FileNameToExtensionGlyphCodeConverter" />
        <DataTemplate x:Key="FileIconColumnTemplate">
            <TextBlock Margin="0,10,0,10" HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontWeight="UltraLight"
                       Text="{Binding DownloadData.FileName, Converter={StaticResource FileNameToExtensionGlyphCodeConverter}}"
                       FontSize="30" FontFamily="{DynamicResource FontIcoFont}" />
        </DataTemplate>
        <DataTemplate x:Key="NameColumnTemplate">
            <StackPanel VerticalAlignment="Center" Margin="0,10,0,10">
                <TextBlock Text="{Binding DownloadData.Name}" Margin="0,0,5,0" FontWeight="Medium" TextTrimming="CharacterEllipsis" />
                <TextBlock Text="{Binding DownloadData.FileName}" Margin="0,10,5,0" TextTrimming="CharacterEllipsis" />
                <ProgressBar Margin="0,5,5,0" Height="5" HorizontalAlignment="Stretch" Value="{Binding DownloadData.Progress}" Minimum="0" Maximum="100" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ButtonsColumnTemplate">
            <StackPanel Orientation="Horizontal">
                <Button Content="DOWNLOAD" Margin="0,0,5,0" Command="{Binding StartDownloadAsyncCommand}" />
                <Button Content="RESUME" Margin="0,0,5,0" Command="{Binding ResumeDownloadAsyncCommand}" />
                <Button Content="PAUSE" Margin="0,0,5,0" Command="{Binding PauseDownloadAsyncCommand}" />
                <Button Content="STOP" Margin="0,0,5,0" Command="{Binding CancelDownloadAsyncCommand}" />
                <Button Content="REMOVE" Margin="0,0,5,0" Command="{Binding RemoveFromDownloadsListAsyncCommand}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="GamesListTemplate">
            <DockPanel Margin="3">
                <Image DockPanel.Dock="Left" Source="{Binding Game.Icon, IsAsync=False, Converter={StaticResource ImageStringToImageConverter}}"
                       VerticalAlignment="Center" RenderOptions.BitmapScalingMode="Fant" Width="20" />
                <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Text="{Binding Game.Name}" TextTrimming="CharacterEllipsis" Margin="5,0,0,0" />
            </DockPanel>
        </DataTemplate>
        <DataTemplate x:Key="ListBoxGameWrapperTemplate">
            <Border Padding="5" Margin="0,3,0,3">
                <StackPanel>
                    <TextBlock Text="{Binding Asset.Label}" FontWeight="Medium" FontSize="16" />
                    <TextBlock Text="{Binding Type}" FontSize="12" Margin="0,5,0,0" />
                    <Separator Margin="0,5,0,5" />
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid Margin="20">
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <StackPanel Orientation="Horizontal">
                    <Button Content="NavigateBackCommand" Command="{Binding NavigateBackCommand}" />
                    <Button Margin="20,0,0,0" Content="OpenGameDownloadsWindowCommand" Command="{Binding OpenGameDownloadsWindowCommand}" />
                </StackPanel>
            </Grid>

            <TabControl TabStripPlacement="Left" Margin="0,15,0,0">
                
                <TabItem>
                    <TabItem.Header>
                        <Border Padding="0,10,20,10">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Left" Text="&#xEA30;" FontSize="25" FontFamily="{DynamicResource FontIcoFont}" VerticalAlignment="Center" />
                                <TextBlock DockPanel.Dock="Left" Text="My games" VerticalAlignment="Center" Margin="10,0,0,0" />
                            </DockPanel>
                        </Border>
                    </TabItem.Header>
                    <DockPanel Margin="10">
                        <DockPanel DockPanel.Dock="Left">
                            <TextBlock DockPanel.Dock="Top" Text="Library games" FontSize="16" />
                            <Separator DockPanel.Dock="Top" Margin="0,10,0,10"/>
                            <ListBox DockPanel.Dock="Top" Width="300" ItemsSource="{Binding LibraryGames}" SelectedItem="{Binding SelectedGameWrapper}"
                                     ItemTemplate="{StaticResource GamesListTemplate}" />
                        </DockPanel>
                        <DockPanel Margin="15,0,0,0" Visibility="{Binding ActiveGameVisibility}">
                            <Grid Height="250" DockPanel.Dock="Top">
                                <Grid>
                                    <Grid.OpacityMask>
                                        <RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="2" RadiusY="0.9">
                                            <RadialGradientBrush.GradientStops>
                                                <GradientStop Color="Black" Offset="0.3" />
                                                <GradientStop Color="Transparent" Offset="1" />
                                            </RadialGradientBrush.GradientStops>
                                        </RadialGradientBrush>
                                    </Grid.OpacityMask>
                                    <Image DockPanel.Dock="Left" Source="{Binding ActiveGameBackgroundImage, IsAsync=False, Converter={StaticResource ImageStringToImageConverter}}"
                                           RenderOptions.BitmapScalingMode="Fant"
                                           Stretch="UniformToFill" StretchDirection="Both" HorizontalAlignment="Left"/>
                                    <Border Background="#4D000000" />
                                </Grid>

                                <DockPanel Margin="10">
                                    <Image DockPanel.Dock="Left" Source="{Binding ActiveGameCoverImage, IsAsync=False, Converter={StaticResource ImageStringToImageConverter}}"
                                           RenderOptions.BitmapScalingMode="Fant"
                                           Stretch="Uniform" StretchDirection="Both" HorizontalAlignment="Left"/>
                                    <DockPanel DockPanel.Dock="Left" Margin="10,0,0,0">
                                        <TextBlock DockPanel.Dock="Top" Text="{Binding ActiveGameName}" TextTrimming="CharacterEllipsis" Foreground="White" FontWeight="SemiBold" FontSize="30" />
                                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,15,0,0">
                                            <TextBlock Text="Developer:" FontWeight="Medium" />
                                            <TextBlock Text="{Binding ActiveGameDevelopers}" Margin="5,0,0,0" />
                                        </StackPanel>
                                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Publisher:" FontWeight="Medium" />
                                            <TextBlock Text="{Binding ActiveGamePublishers}" Margin="5,0,0,0" />
                                        </StackPanel>

                                        <Button DockPanel.Dock="Bottom" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Update Downloads" Command="{Binding UpdateSelectedGameAssetsCommand}" />
                                    </DockPanel>
                                </DockPanel>
                            </Grid>

                            <Grid HorizontalAlignment="Center" DockPanel.Dock="Bottom">
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button Content="Add to downloads" Command="{Binding AddSelectedAssetToQueueCommand}" />
                                </StackPanel>
                            </Grid>

                            <Separator DockPanel.Dock="Top" Margin="0,5,0,5" />

                            <TextBlock DockPanel.Dock="Top" Text="Downloads:" FontWeight="Medium" FontSize="16" Margin="0,10,0,10" />
                            
                            <ListBox DockPanel.Dock="Top" ItemsSource="{Binding ActiveGameAssets}"
                                     SelectedItem="{Binding SelectedGameAsset}" ItemTemplate="{StaticResource ListBoxGameWrapperTemplate}" >
                                <ListBox.Template>
                                    <ControlTemplate>
                                        <ScrollViewer VirtualizingStackPanel.IsVirtualizing="True" 
                                              Padding="0,0,0,0"
                                              VirtualizingStackPanel.VirtualizationMode="Recycling">
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </ListBox.Template>
                            </ListBox>
                        </DockPanel>
                    </DockPanel>
                </TabItem>

                <TabItem>
                    <TabItem.Header>
                        <Border Padding="0,10,20,10">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Left" Text="&#xEF08;" FontSize="25" FontFamily="{DynamicResource FontIcoFont}" VerticalAlignment="Center" />
                                <TextBlock DockPanel.Dock="Left" Text="Downloads" VerticalAlignment="Center" Margin="10,0,0,0" />
                            </DockPanel>
                        </Border>
                    </TabItem.Header>
                    <DockPanel Margin="10">
                        <Grid DockPanel.Dock="Top" MinHeight="100">
                            
                        </Grid>
                        <ListView DockPanel.Dock="Bottom" ItemsSource="{Binding DownloadsList}" Margin="0,15,0,0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="" Width="50" CellTemplate="{StaticResource FileIconColumnTemplate}" />
                                    <GridViewColumn Header="Name" Width="350" CellTemplate="{StaticResource NameColumnTemplate}" />
                                    <GridViewColumn Header="Size" DisplayMemberBinding="{Binding DownloadData.Size}" Width="100" />
                                    <GridViewColumn Header="Speed" DisplayMemberBinding="{Binding DownloadData.Speed}" Width="100" />
                                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding DownloadData.Status}" Width="100" />
                                    <GridViewColumn Header="Time Left" DisplayMemberBinding="{Binding DownloadData.TimeLeft}" Width="100" />
                                    <GridViewColumn Header="Buttons" Width="100" CellTemplate="{StaticResource ButtonsColumnTemplate}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </DockPanel>
                </TabItem>
                
            </TabControl>

        </DockPanel>
    </Grid>
</UserControl>