<UserControl x:Class="JastUsaLibrary.JastUsaLibrarySettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:commonconv="clr-namespace:PluginsCommon.Converters"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <UserControl.Resources>
        <commonconv:UintFieldValidation x:Key="UintFieldValidation" />
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="{DynamicResource LOC_JUL_SettingsAuthenticationLabel}" FontWeight="Medium" />
            <Separator Margin="0,10,0,10" />
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource LOC_JUL_SettingsEmailLabel}" Margin="0,0,10,0"/>
                        <TextBox MinWidth="250" Text="{Binding LoginEmail}"/>
                    </StackPanel>
                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource LOC_JUL_SettingsPasswordLabel}" Margin="0,0,10,0"/>
                        <PasswordBox x:Name="PasswordBox" MinWidth="250" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <Button HorizontalAlignment="Left" Content="{DynamicResource LOC_JUL_SettingsAuthenticateLabel}" Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=PasswordBox}" />
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
                    <TextBlock.Tag>
                        <PriorityBinding>
                            <Binding Path="IsUserLoggedIn" IsAsync="True" />
                            <Binding Source="{x:Null}" />
                        </PriorityBinding>
                    </TextBlock.Tag>
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                            <Style.Triggers>
                                <Trigger Property="Tag" Value="{StaticResource True}">
                                    <Setter Property="Text" Value="{DynamicResource LOC_JUL_SettingsUserIsAuthenticatedLabel}" />
                                </Trigger>
                                <Trigger Property="Tag" Value="{StaticResource False}">
                                    <Setter Property="Text" Value="{DynamicResource LOC_JUL_SettingsUserNotAuthenticatedLabel}" />
                                </Trigger>
                                <Trigger Property="Tag" Value="{x:Null}">
                                    <Setter Property="Text" Value="{DynamicResource LOC_JUL_SettingsCheckingAuthenticationLabel}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <TextBlock Text="{DynamicResource LOC_JUL_SettingsDownloadsLabel}" FontWeight="Medium" Margin="0,30,0,0" />
            <Separator Margin="0,10,0,10" />
            <CheckBox Content="{DynamicResource LOC_JUL_SettingsStartDownloadsOnStartup}" IsChecked="{Binding Settings.StartDownloadsOnStartup}" />
            <CheckBox x:Name="CbDeleteZipOnExtract" Content="{DynamicResource LOC_JUL_SettingsExtractDownloadedFiles}" Margin="0,10,0,0"
                      IsChecked="{Binding Settings.ExtractFilesOnDownload}" />
            <CheckBox IsEnabled="{Binding ElementName=CbDeleteZipOnExtract, Path=IsChecked}"
                      IsChecked="{Binding Settings.DeleteFilesOnExtract}"
                      Content="{DynamicResource LOC_JUL_SettingsDeleteAfterExtraction}" Margin="20,10,0,0" />
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="{DynamicResource LOC_JUL_SettingsMaxConcurrentDownloads}" VerticalAlignment="Center" />
                <TextBox Margin="5,0,0,0" VerticalAlignment="Center" MinWidth="20">
                    <TextBox.Text>
                        <Binding Path="Settings.MaximumConcurrentDownloads" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <commonconv:UintFieldValidation MinValue="0" MaxValue="4"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>


                <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource LOC_JUL_SettingsGamesDownloadsDirectoryLabel}" VerticalAlignment="Center" />
                <TextBox Grid.Row="0" Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center" Text="{Binding Settings.GameDownloadsPath}" IsReadOnly="True" />
                <Button Grid.Row="0" Grid.Column="2" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="10,0,0,0"
                        Content="{DynamicResource LOC_JUL_SettingsBrowseLabel}" Command="{Binding SelectGamesDownloadDirectoryCommand}" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource LOC_JUL_SettingsPatchesDownloadsDirectoryLabel}" VerticalAlignment="Center" />
                <TextBox Grid.Row="2" Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center" Text="{Binding Settings.PatchDownloadsPath}" IsReadOnly="True" />
                <Button Grid.Row="2" Grid.Column="2" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="10,0,0,0"
                        Content="{DynamicResource LOC_JUL_SettingsBrowseLabel}" Command="{Binding SelectPatchesDownloadDirectoryCommand}" />

                <TextBlock Grid.Row="4" Grid.Column="0" Text="{DynamicResource LOC_JUL_SettingsExtrasDownloadsDirectoryLabel}" VerticalAlignment="Center" />
                <TextBox Grid.Row="4" Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center" Text="{Binding Settings.ExtrasDownloadsPath}" IsReadOnly="True" />
                <Button Grid.Row="4" Grid.Column="2" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="10,0,0,0"
                        Content="{DynamicResource LOC_JUL_SettingsBrowseLabel}" Command="{Binding SelectExtrasDownloadDirectoryCommand}" />
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>