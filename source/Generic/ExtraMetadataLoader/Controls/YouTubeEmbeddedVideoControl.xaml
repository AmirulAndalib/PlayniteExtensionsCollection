<PluginUserControl x:Class="ExtraMetadataLoader.Controls.YouTubeEmbeddedVideoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExtraMetadataLoader.Controls"
             xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="MainGrid">
        <Viewbox x:Name="Viewbox" Stretch="Uniform" Visibility="Hidden">
            <Rectangle Width="16" Height="9" Fill="Transparent" IsHitTestVisible="False" />
        </Viewbox>
        <wpf:ChromiumWebBrowser x:Name="cefWebView"
                                Width="{Binding Width, ElementName=MainGrid}"
                                Height="{Binding Height, ElementName=Viewbox}">
        </wpf:ChromiumWebBrowser>
    </Grid>
</PluginUserControl>