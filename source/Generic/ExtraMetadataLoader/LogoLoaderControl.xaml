<PluginUserControl x:Class="ExtraMetadataLoader.LogoLoaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExtraMetadataLoader"
             xmlns:sdk="clr-namespace:Playnite.SDK.Controls;assembly=Playnite.SDK"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="{Binding SettingsModel.Settings.Option2, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="LimeGreen" DockPanel.Dock="Top" />
        <Button Content="{Binding GameContext.Name}" Foreground="LimeGreen" DockPanel.Dock="Top" />
        <Grid x:Name="ControlGrid" Background="Green">
            <Image Name="LogoImage" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant" Width="200" Height="200"
               StretchDirection="Both">
                <Image.Effect>
                    <DropShadowEffect Direction="0" Color="#66000000" ShadowDepth="0" BlurRadius="20" />
                </Image.Effect>
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Source" Value="{Binding LogoSource, Converter={StaticResource ImageStringToImageConverter}}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding LogoSource}" Value="{x:Null}">
                                <Setter Property="Source" Value="{x:Null}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </Grid>
    </StackPanel>
</PluginUserControl>
