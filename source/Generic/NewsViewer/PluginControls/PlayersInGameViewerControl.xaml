<PluginUserControl x:Class="NewsViewer.PluginControls.PlayersInGameViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewsViewer.PluginControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Visibility="{Binding ControlVisibility}">
        <Button Background="Transparent" Padding="0" Margin="0"
                Cursor="Hand"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Left"
                Command="{Binding OpenSteamDbGraphsCommand}"
                Content="{Binding InGamePlayersCount}"
                Foreground="{Binding RelativeSource={RelativeSource AncestorType=ContentControl, AncestorLevel=1}, Path=Foreground}"
                FontSize="{Binding RelativeSource={RelativeSource AncestorType=ContentControl, AncestorLevel=1}, Path=FontSize}" />
    </Grid>
</PluginUserControl>
