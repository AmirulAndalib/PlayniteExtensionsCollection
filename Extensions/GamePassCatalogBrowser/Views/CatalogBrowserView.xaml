<UserControl x:Class="GamePassCatalogBrowser.Views.CatalogBrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GamePassCatalogBrowser"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
        </Grid.Resources>
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0">
                    <TextBlock Text="Collection:" Margin="0,0,0,0" VerticalAlignment="Center"/>
                    <ComboBox Name="ComboBoxCollections" ItemsSource="{Binding Collections}" IsSynchronizedWithCurrentItem="True"
                          Margin="10,0,0,0" Width="250"/>
                    <TextBlock Text="Search:" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding SearchString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=500}" Margin="10,0,0,0"/>
                </DockPanel>

                <ListBox Grid.Row="1" Name="ListBoxGames" Margin="0,10,0,0" ItemsSource="{Binding GamePassGames}" SelectedItem="{Binding SelectedGamePassGame}" IsSynchronizedWithCurrentItem="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    BorderThickness="0"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="4" Background="#33000000">
                                <DockPanel>
                                    <TextBlock DockPanel.Dock="Bottom" Text="{Binding Name}"
                                       Margin="0,3,0,0" Width="150"
                                       HorizontalAlignment="Left" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    <Image Width="150" Height="225"
                                       Source="{Binding CoverImageLowRes, IsAsync=True}"
                                       DockPanel.Dock="Top"
                                       Stretch="Uniform" StretchDirection="Both" HorizontalAlignment="Center"/>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" MinHeight="40"/>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" FontSize="{DynamicResource FontSizeLargest}" TextWrapping="Wrap" Text="{Binding ElementName=ListBoxGames, Path=SelectedItem.Name}" VerticalAlignment="Center"/>
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="Developer:"/>
                        <Label Grid.Row="0" Grid.Column="1" Margin="10,0,0,0"
                                       Content="{Binding ElementName=ListBoxGames, Path=SelectedItem.Developers, Converter={StaticResource ListToStringConverter}}"/>
                        <Label Grid.Row="1" Grid.Column="0" Content="Publisher:"/>
                        <Label Grid.Row="1" Grid.Column="1" Margin="10,0,0,0"
                                       Content="{Binding ElementName=ListBoxGames, Path=SelectedItem.Publishers, Converter={StaticResource ListToStringConverter}}"/>
                    </Grid>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
                        <Button Content="View in Microsoft Store" Command="{Binding StoreViewCommand}" CommandParameter="{Binding SelectedItem, ElementName=ListBoxGames}" DockPanel.Dock="Left" Padding="5"/>
                        <Button Margin="10,0,0,0" Content="Add to Playnite library" Command="{Binding AddGameToLibraryCommand}" CommandParameter="{Binding SelectedItem, ElementName=ListBoxGames}" DockPanel.Dock="Left" Padding="5"/>
                    </StackPanel>
                    <ScrollViewer Grid.Row="3" Margin="0,10,0,0" VerticalScrollBarVisibility="Visible">
                        <TextBlock TextWrapping="Wrap"
                               Text="{Binding ElementName=ListBoxGames, Path=SelectedItem.Description}"/>
                    </ScrollViewer>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
